@using ProjetoEmprestimo.Data.Models.Domain;
@model IEnumerable<Emprestimos>

<div class="container">
	<div class="d-flex justify-content-between align-items-center mb-5">
		<h1>Empréstimos</h1>
		<a class="btn btn-success mx-2" asp-controller="Emprestimo" asp-action="Cadastrar">Cadastrar novo empréstimo</a>
	</div>
	<table id="emprestimo" class="table table-light table-hover mt-5">
		<thead>
			<tr>
				<th scope="col">Recebedor</th>
				<th scope="col">Fornecedor</th>
				<th scope="col">Livro</th>
				<th scope="col">Ultima Atualização</th>
				<th></th>
			</tr>
		</thead>
		<tbody>

			@if (Model != null)
			{

				@foreach (var emprestimo in Model)
				{
					<tr>
						<th scope="row">@emprestimo.Recebedor</th>
						<td>@emprestimo.Fornecedor</td>
						<td>@emprestimo.Livro</td>
						<td>@emprestimo.DataUltimaAtualizacao</td>
						<td>
							<a asp-controller="Emprestimo" asp-action="Editar" asp-route-id="@emprestimo.Id" class="btn btn-warning mx-2">Editar</a>
							<a asp-controller="Emprestimo" asp-action="Excluir" asp-route-id="@emprestimo.Id" class="btn btn-danger mx-2">Excluir</a>
						</td>
					</tr>

				}
			}
		</tbody>
	</table>
</div>