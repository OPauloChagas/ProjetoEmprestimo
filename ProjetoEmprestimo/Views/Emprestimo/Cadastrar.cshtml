@using ProjetoEmprestimo.Data.Models.Domain;
@model Emprestimos
@{

	ViewData["Title"] = "Cadastrar Empréstimo";
}

<div class="container bg-black p-5 rounded-3">

	<div class="mb-5 text-center">
		<h1 class="text-light">Cadastro de Empréstimos</h1>

	</div>
	<form method="post" asp-controller="Emprestimo" asp-action="Cadastrar">

		<div class="mb-3">
			<label for="Recebedor" class="form-label text-light" >Recebedor</label>
			<input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="Quem está reebendo o livro?">
			<span <span class="text-warning" asp-validation-for="Recebedor"></span>
		</div>

		<div class="mb-3">
			<label for="Fornecedor" class="form-label text-light">Fornecedor</label>
			<input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está emprestando o livro?">
			<span class="text-warning" asp-validation-for="Fornecedor"></span>
		</div>

		<div class="mb-3">
			<label for="Livro" class="form-label text-light">Livro</label>
			<input type="text" class="form-control" id="Livro" asp-for="Livro" placeholder="Qual é o livro que está emprestando?">
			<span <span class="text-warning" asp-validation-for="Livro"></span>
		</div>
		<div class="d-flex gap-5 mt-5">
			<button type="submit" class="btn btn-success w-50">Adicionar</button>
			<a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
		</div>
		
	</form>
</div>